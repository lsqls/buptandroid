                android:layout_marginLeft="15dp"
                android:layout_marginTop="20dp"
                android:text="商品名称" />

            <TextView
                android:id="@+id/tv_atk2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="20dp"
                android:text="攻击力" />

            <Button
                android:id="@+id/btn2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="20dp"
                android:onClick="click_2"
                android:text="购买" />
        </TableRow>

        <TableRow>

            <TextView
                android:id="@+id/tv_speed2"
