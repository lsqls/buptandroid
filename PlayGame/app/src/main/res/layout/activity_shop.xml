        android:id="@+id/TL3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_weight="0.17">

        <TableRow>

            <TextView
                android:id="@+id/tv_life3"
