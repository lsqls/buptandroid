                android:text="攻击力" />

            <Button
                android:id="@+id/btn3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="20dp"
                android:onClick="click_3"
                android:text="购买" />
        </TableRow>

        <TableRow>

            <TextView
                android:id="@+id/tv_speed3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="2"
                android:layout_marginLeft="15dp"
